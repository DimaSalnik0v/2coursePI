    SqlCommand cmd = new SqlCommand("DELETE FROM equipments Where Id=@Id", connection);
    cmd.Parameters.AddWithValue("@Id", id);
    cmd.ExecuteNonQuery();

    Response.Redirect("/employee/equipment/index");
}
@page
@model IT_department.Web.Pages.Booker.User.IndexModel
@{
}
<style>
    body {
        background-image: url(https://bogatyr.club/uploads/posts/2023-01/thumbs/1674735471_bogatyr-club-p-svetlii-fon-dlya-saita-fon-pinterest-5.jpg);
        background-size: cover;
        justify-content: center;
        background-repeat: no-repeat;
    }
</style>
<br>
<h2 class="text-center">«Список пользователей системы»</h2>
<a class="btn btn-primary btn-sm" href="/booker/user/create">Добавить нового пользователя</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Логин</th>
@*            <th>Password</th>*@
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Должность</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.users)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.login</td>
@*                <td>@item.pass</td>*@
                <td>@item.name</td>
                <td>@item.surname</td>
                <td>@item.JobTitle.name_job_title</td>
                <td>
                    @if (item.Id != 7)
                    {
                        <a class="btn btn-primary btn-sm" href="/booker/user/Edit/@item.Id">Изм.</a>
                        <a class="btn btn-danger btn-sm" href="/booker/user/Delete?Id=@item.Id">Удалить</a>
                    }
                    else  
                    {
                        <a class="btn btn-primary btn-sm" href="/booker/user/Edit/@item.Id">Изм.</a>
                    }
                    </td>
            </tr>
        }
    </tbody>
</table>